<link href="/stylesheets/style.css" rel="stylesheet">
<div class="form">
    <div class="header">
        <h2>Sign In</h2>
    </div>
    <div class="login">
        <form id="loginform" ng-submit="userLogin()" role="form">
            <ul>
                <li>
                    <span class="un"><i class="fa fa-user"></i></span><input type="text" required class="text" placeholder="User Name Or Email" ng-model='user.username' id='username'/>
                </li>
                <li>
                    <span class="un"><i class="fa fa-lock"></i></span><input type="password" required class="text" placeholder="User Password" ng-model='user.password' id='password'/>
                </li>
                <li>
                    <input type="submit" value="LOGIN" class="btn">
                </li>
                <li>
                    <div class="span">
                        <span class="ch">
                        <input type="checkbox" id="r"> <label for="r">Remember Me</label> 
                        </span> <span class="ch"><a href="#">Forgot Password?</a></span>
                    </div>
                </li>
            </ul>
        </form>
    </div>
    <br/>
    <div class="sign">
        <div class="need"><a href="#/agency">Cancel</a></div>
        <div class="up">
            <a href="#/sign-up">Sign Up</a>
        </div>
    </div>
</div>
